---
// Layout.astro
const { title = "My Astro Site" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/global.css" />
    <!-- Load Montserrat -->
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        /* Catppuccin color palette */
        --primary-color: #89b4fa;  /* Blue */
        --accent-color:  #f9e2af;   /* Yellow */
        --bg-color:      #1e1e2e;   /* Dark background */
        --font-primary:  "Montserrat", Arial, sans-serif;
        --text-color:    #cdd6f4;   /* Light text */
        --card-bg:       #313244;   /* Card background */
        --card-border:   #45475a;
        --gradient-color: linear-gradient(45deg, var(--primary-color), var(--accent-color));
      }
      body {
        background: url('/assets/background.svg') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        font-family: var(--font-primary);
        background-color: var(--bg-color);
        color: var(--text-color);
      }
      header {
        background: rgba(30, 30, 46, 0.8);
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      header .logo img {
        height: 50px;
      }
      header .logo a {
        text-decoration: none;
      }
      header nav a {
        color: var(--text-color);
        text-decoration: none;
        margin: 0 1rem;
      }
      header nav a:hover {
        color: var(--accent-color);
      }
      footer {
        background: rgba(30, 30, 46, 0.8);
        color: var(--text-color);
        text-align: center;
        padding: 1rem;
        position: static; /* Non-sticky */
      }
      main {
        padding: 2rem;
        margin-bottom: 2rem;
        flex: 1;
      }
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      .wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <header>
        <div class="logo">
          <a href="/">
            <img src="/assets/astro.svg" alt="astro.svg" />
          </a>
        </div>
        <nav>
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/blog">Blog</a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} Daniil Katulevskiy. All rights reserved.</p>
    </footer>
    </div>
  </body>
</html>
