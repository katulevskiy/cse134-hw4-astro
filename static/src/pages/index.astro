---
// index.astro
import Layout from '../layouts/Layout.astro';
import Welcome from '../components/Welcome.astro';

const posts = [
  {
    title: "The Wonders of the Universe",
    summary: "Discover the awe-inspiring beauty of galaxies, nebulae, and star clusters.",
    url: "/blog/the-wonders-of-the-universe",
    date: "2025-02-01",
  },
  {
    title: "Creating an Astro Static Site",
    summary: "Learn how Astro helps you build lightning-fast, static websites with reusable components.",
    url: "/blog/creating-an-astro-static-site",
    date: "2025-02-15",
  },
  {
    title: "Journey to the Stars",
    summary: "Explore the life cycle of stars and the mysteries of stellar evolution.",
    url: "/blog/journey-to-the-stars",
    date: "2025-03-01",
  },
];
---
<Layout title="Home | Cosmic Astro">
  <Welcome />
  <section class="blog-list">
    <h2 style="color: var(--text-color); text-align: center;">Latest Blog Posts</h2>
    <ul style="padding: 0; list-style: none;">
      {posts.map(post => (
        <li key={post.url} style="margin: 1rem 0; background: rgba(255,255,255,0.1); padding: 1rem; border-radius: 8px;">
          <a href={post.url} style="color: var(--accent-color); font-size: 1.5rem; text-decoration: none;">{post.title}</a>
          <p style="color: var(--text-color); margin: 0.5rem 0;">{post.summary}</p>
          <time datetime={post.date} style="color: #ccc; font-size: 0.9rem;">{post.date}</time>
        </li>
      ))}
    </ul>
  </section>
</Layout>
