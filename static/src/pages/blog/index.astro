---
// blog/index.astro
import Layout from '../../layouts/Layout.astro';

const posts = [
  {
    title: "Journey to the Stars",
    summary: "Explore the life cycle of stars and the mysteries of stellar evolution.",
    url: "/blog/journey-to-the-stars",
    date: "2025-03-01",
  },
  {
    title: "Creating an Astro Static Site",
    summary: "Learn how Astro helps you build lightning-fast static websites with reusable components.",
    url: "/blog/creating-an-astro-static-site",
    date: "2025-02-15",
  },
  {
    title: "The Wonders of the Universe",
    summary: "Discover the awe-inspiring beauty of galaxies, nebulae, and star clusters.",
    url: "/blog/the-wonders-of-the-universe",
    date: "2025-02-01",
  },
];

// Sort posts by date descending (most recent first)
posts.sort((a, b) => new Date(b.date) - new Date(a.date));
---
<Layout title="Blog | Cosmic Astro">
  <section class="blog-index">
    <h1>Blog</h1>
    <ul>
      {posts.map(post => (
        <li key={post.url}>
          <a href={post.url}>{post.title}</a>
          <p>{post.summary}</p>
          <time datetime={post.date}>{post.date}</time>
        </li>
      ))}
    </ul>
  </section>
</Layout>

<style>
  .blog-index {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
    background: rgba(255,255,255,0.1);
    border-radius: 8px;
    color: var(--text-color);
  }
  .blog-index h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    text-align: center;
  }
  .blog-index ul {
    list-style: none;
    padding: 0;
  }
  .blog-index li {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--card-border);
  }
  .blog-index a {
    color: var(--accent-color);
    font-size: 1.5rem;
    text-decoration: none;
  }
  .blog-index a:hover {
    text-decoration: underline;
  }
  .blog-index p {
    font-size: 1.1rem;
    margin: 0.5rem 0;
  }
  .blog-index time {
    font-size: 0.9rem;
    color: #ccc;
  }
</style>
