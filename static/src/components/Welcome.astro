---
// Welcome.astro
const { title = "Welcome to the Cosmos", description = "Explore the wonders of space and learn how to build blazing-fast static websites with Astro!" } = Astro.props;
---
<section class="welcome">
  <h1>{title}</h1>
  <p>{description}</p>
</section>

<style>
  .welcome {
    text-align: center;
    color: var(--text-color);
    padding: 3rem 1rem;
  }
  .welcome h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .welcome p {
    font-size: 1.5rem;
  }
</style>
